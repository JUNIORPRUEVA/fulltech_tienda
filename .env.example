# Local development defaults
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fulltech?schema=public

# Seed (required by `npm run seed`)
ADMIN_EMAIL=admin@fulltech.local
ADMIN_PASSWORD=change-me

NODE_ENV=development
PORT=3000

JWT_ACCESS_SECRET=change-me-access-please
JWT_ACCESS_EXPIRES_IN=15m

JWT_REFRESH_SECRET=change-me-refresh-please
JWT_REFRESH_EXPIRES_IN=30d

# Comma-separated list. Use * to allow any origin in dev.
CORS_ORIGINS=*

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=300

LOG_LEVEL=info

# Prisma
# En algunos despliegues puede activarse el engine "client" y fallar si no hay adapter/accelerate.
# Forzamos el engine normal.
PRISMA_CLIENT_ENGINE_TYPE=library

# Uploads (persistir en volumen)
UPLOAD_DIR=uploads
